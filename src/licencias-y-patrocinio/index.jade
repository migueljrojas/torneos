extends ../_layouts/base

include ../_modules/hero/hero

block title
    title Torneos | Licencias, E-Commerce y Patrocinio 

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.licencias
        +hero(site.data.licencias.hero)
        
        section.licencias__body
            .container
                .row
                    .col-xs-24
                        p.licencias__text= site.data.licencias.top.text
                        ul.licencias__logos
                            each logo, index in site.data.licencias.top.logos
                                li.licencias__logo.wow.fadeInUp(data-wow-delay="#{(index + 1)/4}s")
                                    img(src=logo)
                                    
        section.licencias__photos
            .licencias__photos__row-one
                .licencias__photo.wow.fadeInLeftBig
                    img.img-responsive(src="/images/licencias/row1-1.jpg")
                .licencias__photo.wow.fadeInLeftBig
                    img.img-responsive(src="/images/licencias/row1-2.jpg")
        
        section.licencias__ecommerce
            .container
                .row.licencias__ecommerce__row
                    .col-xs-24.col-sm-12
                        .licencias__ecommerce__titlebox
                            h2.licencias__ecommerce__title= site.data.licencias.ecommerce.title
                            p.licencias__ecommerce__title__sub!= site.data.licencias.ecommerce.subtitle
                            
                    .col-xs-24.col-sm-12
                        p.licencias__text= site.data.licencias.ecommerce.text
                .row.licencias__ecommerce__row
                    each shop in site.data.licencias.ecommerce.shops
                        .col-xs-24.col-sm-12.col-md-6.licencias__ecommerce__shop
                            ._img
                                img(src=shop.img)
                            ._data
                                h3._name= shop.title
                                each link in shop.links
                                    a._link(href=link.url, target="_blank")
                                        i.fa.fa-external-link
                                        | #{link.text}
                                        if link.desc
                                            span= link.desc
                                            
        section.licencias__photos.licencias__patrocinio
            .licencias__photos__row-two
                h2.licencias__patrocinio__title= site.data.licencias.patrocinio.title
                .licencias__patrocinio__titlebox
                    p.licencias__patrocinio__title__sub!= site.data.licencias.patrocinio.text
                .licencias__photo.wow.fadeInLeftBig
                    img.img-responsive(src="/images/licencias/row2-1.jpg")
            

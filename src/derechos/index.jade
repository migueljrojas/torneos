extends ../_layouts/base

include ../_modules/hero/hero

block title
    title Torneos | Comercializaci√≥n de Derechos Audiovisuales

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.derechos
        +hero(site.data.derechos.hero)
        
        section.derechos__body
            .container
                .row
                    .col-xs-24
                        p.derechos__text= site.data.derechos.top.text
                        ul.derechos__logos
                            each logo, index in site.data.derechos.top.logos
                                li.derechos__logo.wow.fadeInUp(data-wow-delay="#{(index + 1)/4}s")
                                    img(src=logo)
                                    
        section.derechos__photos
            .derechos__photos__row-one
                .derechos__photo.wow.fadeInLeftBig
                    img.img-responsive(src="/images/derechos/row1-1.jpg")
                .derechos__photo.wow.fadeInLeftBig
                    img.img-responsive(src="/images/derechos/row1-2.jpg")
            .derechos__photos__row-two
                .derechos__photo.wow.fadeInLeftBig
                    img.img-responsive(src="/images/derechos/row2-1.jpg")
